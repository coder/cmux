{
  "name": "cmux",
  "version": "0.0.1",
  "description": "cmux - coder multiplexer",
  "main": "dist/main.js",
  "scripts": {
    "dev": "bun run build:main && concurrently -k \"bun run dev:main\" \"bun run dev:renderer\"",
    "dev:main": "tsc -w -p tsconfig.main.json",
    "dev:renderer": "vite",
    "build": "bun run build:renderer && bun run build:main && bun run build:preload",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "bun build src/preload.ts --format=cjs --target=node --external=electron --outfile=dist/preload.js",
    "build:renderer": "vite build",
    "start": "bun build:preload && electron .",
    "typecheck": "tsc --noEmit",
    "typecheck:main": "tsc --noEmit -p tsconfig.main.json",
    "debug": "bun src/debug/index.ts",
    "lint": "eslint 'src/**/*.{ts,tsx}' && bun run typecheck && bun run typecheck:main",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "fmt": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\" \"*.{json,md}\"",
    "fmt:shell": "shfmt -i 2 -ci -bn -w scripts",
    "fmt:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json}\" \"*.{json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dist": "bun run build && electron-builder",
    "dist:mac": "bun run build && electron-builder --mac",
    "dist:win": "bun run build && electron-builder --win",
    "dist:linux": "bun run build && electron-builder --linux"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.20",
    "@ai-sdk/google": "^2.0.17",
    "@ai-sdk/openai": "^2.0.40",
    "@anthropic-ai/sdk": "^0.63.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "ai": "^5.0.56",
    "jsonc-parser": "^3.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.2.23",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^4.4.0"
  },
  "build": {
    "appId": "com.cmux.app",
    "productName": "Cmux",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    },
    "win": {
      "target": "nsis"
    }
  }
}

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist",
    "noEmit": false,
    "sourceMap": true
  },
  "include": [
    "src/main.ts",
    "src/main-server.ts",
    "src/main-desktop.ts",
    "src/constants/**/*",
    "src/web/**/*",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["src/App.tsx", "src/main.tsx"]
}
